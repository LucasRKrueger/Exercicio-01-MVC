
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Master.cshtml";
}

    @Html.ActionLink("Novo Aluno", "Cadastro", "Aluno", new {@class = "btn btn-primary float-right mr-3 mb-2 mt-2" })
    <div class="mr-3 ml-3">
        
        <table class="table table-striped table table-bordered">
            <thead>
                <tr class="bg-secondary text-white">
                    <th>Código</th>
                    <th>Nome</th>
                    <th>Código da Matricula</th>
                    <th>Nota 1</th>
                    <th>Nota 2</th>
                    <th>Nota 3</th>
                    <th>Média</th>
                    <th>Frequência</th>
                    <th>Situação</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                @foreach (ExercicioMVC01.Models.Aluno aluno in @ViewBag.Alunos)
                {
                    <tr>
                        <td>@aluno.Id</td>
                        <td>@aluno.Nome</td>
                        <td>@aluno.CodigoMatricula</td>
                        <td>@aluno.Nota1</td>
                        <td>@aluno.Nota2</td>
                        <td>@aluno.Nota3</td>
                        <td>@aluno.Media</td>
                        <td>@aluno.Frequencia%</td>
                        <td>
                            @if (Convert.ToSingle(aluno.Media) < 5)
                            {
                                <span>Reprovado</span>
                            }
                            else if((Convert.ToSingle(aluno.Media) >= 5 ) && (Convert.ToSingle(aluno.Media) < 7))
                            {
                                <span>Recuperação</span>
                            }
                            else if(Convert.ToByte(aluno.Frequencia) < 65)
                            {
                                <span>Reprovado</span>
                            }
                            else if(Convert.ToSingle(aluno.Media) > 7)
                            {
                                <span>Aprovado</span>
                            }
                            </td>
                        <td>
                            <a href="/Aluno/Editar?id=@aluno.Id" class="btn btn-success">
                                <i class="fade fa-check"></i>Editar
                            </a>
                            <a href="/Aluno/Excluir?id=@aluno.Id" class="btn btn-danger">
                                <i class="fa-check fa-trash"></i>Excluir
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table> 
    </div>

